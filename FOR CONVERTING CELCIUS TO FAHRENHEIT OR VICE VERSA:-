scale=input("Type 'fahrenheit' to convert Celsius to Fahrenheit or 'celcius' to convert Fahrenheit to Celsius: ")
if scale.lower()=="fahrenheit":
    c=float(input("Enter the temperature:"))
    temp=(c*9/5)+32                                    
    print(c,"℃ is equal to",temp,"℉")
elif scale.lower()=="celcius":
    f=float(input("Enter the temperature:"))
    temp=((f-32)*5)/9                                 
    print(f,"°F is equal to",temp,"°C")
else:
    print("Invalid input")
